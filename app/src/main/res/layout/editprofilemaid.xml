<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d9cdcc"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/bg1"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bg"
            android:layout_marginTop="-110dp"
            android:orientation="vertical"
            android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avamaid2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Name"
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_nama1_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Farhan Agung Maulana"
                    android:textColor="#000"
                    android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Alamat"
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_alamat1_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jl. Balikpapan"
                    android:textColor="#000"
                    android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="No Telp."
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_nomor1_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="081364521654"
                    android:textColor="#000"
                    android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Usia"
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_age1_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="18"
                    android:textColor="#000"
                    android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Deskripsi Diri."
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_desc1_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:text="saya orang nya suka memasak dan saya orang nya gampang jatuh cinta tapi sama orang yang ganteng,saya orang yang sabar dalam menghadapi orang lain"
                    android:textColor="#000"
                    android:textSize="12sp" />
        </LinearLayout>

        <Button
                android:id="@+id/btnsave"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@drawable/lengkung3"
                android:text="save"
                android:textColor="#ffff" />
    </LinearLayout>

</LinearLayout>