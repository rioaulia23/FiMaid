<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d9cdcc"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/bgmaid"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

    <LinearLayout
            android:id="@+id/lldata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bgmaid"
            android:layout_marginTop="-110dp"
            android:orientation="vertical"
            android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avamaid"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Name"
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_nama_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="Farhan Agung Maulana"
                    android:textColor="#000"
                    android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Password"
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_password_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="textPassword"
                    android:text="itspassword"
                    android:textColor="#000"
                    android:textSize="12sp"
                    app:passwordToggleEnabled="true" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Email"
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_email_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"

                    android:text="famagung@gmail.com"
                    android:textColor="#000"
                    android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Alamat"
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_alamat_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="Jl. Balikpapan"
                    android:textColor="#000"
                    android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="No Telp."
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_nomor_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="number"
                    android:text="081364521654"
                    android:textColor="#000"
                    android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="Usia"
                    android:textColor="#000"
                    android:textSize="12sp" />

            <EditText
                    android:id="@+id/etp_usia1_maid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="number"
                    android:text="081364521654"
                    android:textColor="#000"
                    android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/etp_nomor"
                android:orientation="horizontal"

                android:padding="20dp">

            <Button
                    android:id="@+id/editmaid"
                    android:layout_width="294dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/lengkung3"
                    android:text="edit"

                    android:textColor="#ffff" />

            <Button
                    android:id="@+id/logoutmaid"
                    android:layout_width="294dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/lengkung2"
                    android:text="logout"
                    android:textColor="#ffff" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>